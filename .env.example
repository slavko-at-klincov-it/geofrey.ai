# Locale (de | en)
LOCALE=de

# Platform (telegram | whatsapp | signal)
PLATFORM=telegram

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_OWNER_ID=your_telegram_user_id

# WhatsApp Business API (Cloud API)
# PLATFORM=whatsapp
# WHATSAPP_PHONE_NUMBER_ID=your_business_phone_number_id
# WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
# WHATSAPP_VERIFY_TOKEN=your_webhook_verification_token
# WHATSAPP_OWNER_PHONE=491234567890
# WHATSAPP_WEBHOOK_PORT=3000
#
# WICHTIG: Aktivieren Sie "Erweiterten Chat-Datenschutz" in WhatsApp:
# Einstellungen > Datenschutz > Erweiterter Chat-Datenschutz (für den Bot-Chat)
# Dies ist eine clientseitige Einstellung und kann nicht per API aktiviert werden.

# Signal (via signal-cli JSON-RPC)
# PLATFORM=signal
# SIGNAL_CLI_SOCKET=/var/run/signal-cli/socket
# SIGNAL_OWNER_PHONE=+491234567890
# SIGNAL_BOT_PHONE=+491234567891

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
ORCHESTRATOR_MODEL=qwen3:8b  # any Ollama model name

# Context
ORCHESTRATOR_NUM_CTX=16384
# ORCHESTRATOR_NUM_CTX=32768  # for 32GB+ RAM

# Database
DATABASE_URL=./data/app.db

# Audit
AUDIT_LOG_DIR=./data/audit

# Limits
MAX_AGENT_STEPS=15
APPROVAL_TIMEOUT_MS=300000
MAX_CONSECUTIVE_ERRORS=3

# Anthropic API Key (Alternative zu Claude Subscription)
# Wenn du Pro/Max/Teams/Enterprise hast, brauchst du das nicht — nutze 'claude login'
# ANTHROPIC_API_KEY=sk-ant-...

# Claude Code CLI (requires Claude Code installed + Pro/Max subscription OR API Key)
# CLAUDE_CODE_ENABLED=true
# CLAUDE_CODE_SKIP_PERMISSIONS=true
# CLAUDE_CODE_MODEL=claude-sonnet-4-5-20250929
# CLAUDE_CODE_TIMEOUT_MS=600000
# CLAUDE_CODE_MAX_BUDGET_USD=5
# CLAUDE_CODE_DEFAULT_DIRS=/home/user/project
# CLAUDE_CODE_MCP_CONFIG=/path/to/mcp.json
# CLAUDE_CODE_OUTPUT_FORMAT=stream-json
# CLAUDE_CODE_SESSION_TTL_MS=3600000

# Image Sanitizer
# IMAGE_SANITIZER_ENABLED=true
# IMAGE_SANITIZER_MAX_SIZE=20971520
# IMAGE_SANITIZER_SCAN_INJECTION=true

# MCP
# MCP_SERVERS=[{"name":"fs","command":"npx","args":["-y","@anthropic/mcp-fs"]}]
# MCP_ALLOWED_SERVERS=fs-server,git-server

{
  "name": "geofrey-ai",
  "version": "1.0.1",
  "description": "Better OpenClaw alternative with local LLM orchestrator",
  "license": "MIT",
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "bin": {
    "geofrey": "./bin/geofrey.mjs"
  },
  "files": [
    "dist/",
    "bin/",
    "drizzle/",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "lint": "tsc --noEmit",
    "test": "node --import tsx/esm --test 'src/**/*.test.ts'",
    "setup": "tsx src/onboarding/setup.ts",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ai": "^6.0.0",
    "ai-sdk-ollama": "^3.0.0",
    "better-sqlite3": "^11.0.0",
    "chalk": "^5.6.2",
    "clipboardy": "^5.3.0",
    "drizzle-orm": "^0.40.0",
    "execa": "^9.5.0",
    "grammy": "^1.35.0",
    "ora": "^9.3.0",
    "sharp": "^0.34.5",
    "tesseract.js": "^7.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^22.0.0",
    "drizzle-kit": "^0.30.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0"
  }
}

# Locale (de | en)
LOCALE=de

# Platform (telegram | whatsapp | signal | webchat | slack | discord | companion)
PLATFORM=telegram

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_OWNER_ID=your_telegram_user_id

# WhatsApp Business API (Cloud API)
# PLATFORM=whatsapp
# WHATSAPP_PHONE_NUMBER_ID=your_business_phone_number_id
# WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
# WHATSAPP_VERIFY_TOKEN=your_webhook_verification_token
# WHATSAPP_OWNER_PHONE=491234567890
# WHATSAPP_WEBHOOK_PORT=3000
#
# WICHTIG: Aktivieren Sie "Erweiterten Chat-Datenschutz" in WhatsApp:
# Einstellungen > Datenschutz > Erweiterter Chat-Datenschutz (für den Bot-Chat)
# Dies ist eine clientseitige Einstellung und kann nicht per API aktiviert werden.

# Signal (via signal-cli JSON-RPC)
# PLATFORM=signal
# SIGNAL_CLI_SOCKET=/var/run/signal-cli/socket
# SIGNAL_OWNER_PHONE=+491234567890
# SIGNAL_BOT_PHONE=+491234567891

# --- Slack ---
# SLACK_BOT_TOKEN=xoxb-...
# SLACK_APP_TOKEN=xapp-...
# SLACK_CHANNEL_ID=C...

# --- Discord ---
# DISCORD_BOT_TOKEN=...
# DISCORD_CHANNEL_ID=...

# Ollama
OLLAMA_BASE_URL=http://localhost:11434
ORCHESTRATOR_MODEL=qwen3:8b  # any Ollama model name

# Context
ORCHESTRATOR_NUM_CTX=16384
# ORCHESTRATOR_NUM_CTX=32768  # for 32GB+ RAM

# Database
DATABASE_URL=./data/app.db

# Audit
AUDIT_LOG_DIR=./data/audit

# Limits
MAX_AGENT_STEPS=15
APPROVAL_TIMEOUT_MS=300000
MAX_CONSECUTIVE_ERRORS=3

# Anthropic API Key (Alternative zu Claude Subscription)
# Wenn du Pro/Max/Teams/Enterprise hast, brauchst du das nicht — nutze 'claude login'
# ANTHROPIC_API_KEY=sk-ant-...

# Claude Code CLI (requires Claude Code installed + Pro/Max subscription OR API Key)
# CLAUDE_CODE_ENABLED=true
# CLAUDE_CODE_SKIP_PERMISSIONS=true
# CLAUDE_CODE_MODEL=claude-sonnet-4-5-20250929
# CLAUDE_CODE_TIMEOUT_MS=600000
# CLAUDE_CODE_MAX_BUDGET_USD=5
# CLAUDE_CODE_DEFAULT_DIRS=/home/user/project
# CLAUDE_CODE_MCP_CONFIG=/path/to/mcp.json
# CLAUDE_CODE_OUTPUT_FORMAT=stream-json
# CLAUDE_CODE_SESSION_TTL_MS=3600000

# Image Sanitizer
# IMAGE_SANITIZER_ENABLED=true
# IMAGE_SANITIZER_MAX_SIZE=20971520
# IMAGE_SANITIZER_SCAN_INJECTION=true

# MCP
# MCP_SERVERS=[{"name":"fs","command":"npx","args":["-y","@anthropic/mcp-fs"]}]
# MCP_ALLOWED_SERVERS=fs-server,git-server

# Dashboard
# DASHBOARD_ENABLED=true
# DASHBOARD_PORT=3001
# DASHBOARD_TOKEN=your_secret_token

# Search
# SEARCH_PROVIDER=searxng
# SEARXNG_URL=http://localhost:8080
# BRAVE_API_KEY=your_brave_key

# Billing
# MAX_DAILY_BUDGET_USD=10

# --- Voice ---
# VOICE_STT_PROVIDER=openai    # openai | whisper
# STT_PROVIDER=openai
# OPENAI_API_KEY=sk-...
# WHISPER_MODEL_PATH=/path/to/ggml-base.bin  # Path to local whisper model

# TTS (ElevenLabs)
# ELEVENLABS_API_KEY=xi-...
# ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
# ELEVENLABS_MODEL=eleven_multilingual_v2
# ELEVENLABS_CACHE_SIZE=50

# Docker Sandbox
# SANDBOX_ENABLED=true
# SANDBOX_IMAGE=node:22-slim
# SANDBOX_MEMORY_LIMIT=512m
# SANDBOX_NETWORK=false
# SANDBOX_PIDS_LIMIT=64
# SANDBOX_READ_ONLY=false
# SANDBOX_TTL_MS=1800000

# Webhooks
# WEBHOOK_ENABLED=true
# WEBHOOK_PORT=3002
# WEBHOOK_HOST=localhost
# WEBHOOK_RATE_LIMIT=60

# --- Agent Hub ---
# AGENTS_ENABLED=true
# AGENTS_ROUTING_STRATEGY=skill-based
# AGENTS_MAX_CONCURRENT=5
# AGENTS_SESSION_ISOLATION=true

# --- Companion ---
# COMPANION_ENABLED=true
# COMPANION_WS_PORT=3003
# COMPANION_PAIRING_TTL_MS=300000
# COMPANION_HEARTBEAT_MS=30000
# APNS_KEY_ID=your_key_id
# APNS_TEAM_ID=your_team_id
# APNS_KEY_PATH=/path/to/AuthKey.p8
# APNS_BUNDLE_ID=com.geofrey.app
# FCM_PROJECT_ID=your_project_id
# FCM_SERVICE_ACCOUNT_PATH=/path/to/service-account.json

# Smart Home
# HUE_BRIDGE_IP=192.168.1.100
# HUE_API_KEY=your_hue_api_key
# HOMEASSISTANT_URL=http://homeassistant.local:8123
# HOMEASSISTANT_TOKEN=your_long_lived_token
# SONOS_HOUSEHOLD=your_household_id

# Google (Gmail/Calendar)
# GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your_client_secret
# GOOGLE_REDIRECT_PORT=3004
